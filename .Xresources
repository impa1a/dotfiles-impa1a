! Cursor theme (local)
Xcursor.theme: capitaine-cursors

URxvt.depth:                32
URxvt.geometry:             120x50
URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            50
URxvt.internalBorder:       15
URxvt.lineSpace:            0

! Fonts
URxvt.font: xft:Hack:pixelsize=15
URxvt.letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher,resize-font
URxvt.matcher.button:       1
URxvt.urlLauncher:          google-chrome

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! Color Scheme
urxvt*depth: 32
urxvt*background: rgba:0000/0000/0200/8888
*foreground: #1ba9b9
!!*fading: 0
*fadeColor: #17bebb
URxvt.cursorColor: #fffff0
*pointerColorBackground: #fffff0
*pointerColorForeground: #17bebb

*color0:  #2e3436
*color1:  #a40000
*color2:  #4e9a06
*color3:  #fada5e
*color4:  #ce5c00
*color5:  #75507b
*color6:  #729fcf
*color7:  #babdb9
*color8:  #555753
*color9:  #ef2929
*color10: #8ae234
*color11: #fce94f
*color12: #fcaf3e
*color13: #ad7fa8
*color14: #1ba9b9
*color15: #eeeeec
